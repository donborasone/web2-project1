    <body>
        <h1>Prikaz lokacija zadnjih 5 prijavljenih korisnika</h1>
        <ul>
            <li>
                <a href="/" title = "Povratak">Povratak</a>
            </li>
        </ul>
        <div id="map" style="height: 400px;"></div>
        <script>
            let users = '<%-users%>'
            users = JSON.parse(users)
            let latitude = 45.78447
            let longitude = 15.946051
            var mymap = L.map('map').setView([latitude, longitude], 5);
            for(var data of users){
                var marker = L.marker([data[1], data[2]]).addTo(mymap);
                marker.bindPopup("<b>" + data[0] + "</b><p>Datum prijave: " + data[3] + "</p>")
            }
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png?{foo}', {   
                foo: 'bar', 
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(mymap);
        </script>
    </body>
